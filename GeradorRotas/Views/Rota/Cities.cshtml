@{
    ViewData["Title"] = "Cidades";
}

<h1>Cidades Disponíveis</h1>

<h4>Escolha da Cidade para o serviço: @ViewBag.Service</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Equips">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="font-weight-bold">Serviços</label>
                <fieldset data-role="controlgroup">
                    @foreach (var cidade in @ViewBag.Cities)
                    {
                        <input type="radio" name="cidade" id="@cidade" value="@cidade">
                        <label for="@cidade">@cidade</label>
                        <br />
                    }
                </fieldset>
            </div>
            <br />
            <div class="form-group" id="btnSend">
                <input type="submit" id="btn" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
