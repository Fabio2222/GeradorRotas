@model Models.Equipe
@{
    ViewData["Title"] = "Inserir Equipe";
}

<h1>Inserir</h1>

<h4>Equipe</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Estado</label>
                <select>
                    <option value="SP">SP</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <select asp-for="Cidade" id="cidade">
                    @{
                        foreach (var city in @ViewBag.Cidades)
                        {
                            <option value="@city.Nome">@city.Nome</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                @foreach (var pessoa in @ViewBag.Pessoas)
                {
                    <input type="checkbox" name="selectedPesoa" value="@pessoa.Nome" id="@pessoa.Nome" class="form-check-inline" />
                    <label for="@pessoa.Nome">@pessoa.Nome</label>
                    <br />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Inserir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a listagem</a>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}